# Required: one provider key
ANTHROPIC_API_KEY=
ANTHROPIC_OAUTH_TOKEN=
OPENAI_API_KEY=

# Identity
CLAWSOME_CHATSDK_USERNAME=mick
CLAWSOME_CHATSDK_PORT=8787
CLAWSOME_TRIGGER_PATTERNS=@Mick

# Model
CLAWSOME_MODEL_PROVIDER=anthropic
CLAWSOME_MODEL=claude-sonnet-4-20250514

# Runtime
CLAWSOME_DATA_DIR=.clawsome
CLAWSOME_MAX_CONCURRENCY=2
CLAWSOME_LOG_LEVEL=info

# Containerized agent runtime
CLAWSOME_AGENT_CONTAINER_IMAGE=oven/bun:1.3

# Optional: pi auth file path (default: <dataDir>/global/auth.json)
# CLAWSOME_AUTH_PATH=

# Optional: admin caller IDs (comma-separated)
# CLAWSOME_ADMINS=

# WhatsApp ingress (Baileys socket)
CLAWSOME_ENABLE_WHATSAPP=false

# Optional Slack ingress
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Optional Discord ingress
DISCORD_BOT_TOKEN=
DISCORD_PUBLIC_KEY=
DISCORD_APPLICATION_ID=
DISCORD_MENTION_ROLE_IDS=
CLAWSOME_DISCORD_GATEWAY_DURATION_MS=600000
CLAWSOME_DISCORD_GATEWAY_SECRET=
