# Required: one provider key
ANTHROPIC_API_KEY=
ANTHROPIC_OAUTH_TOKEN=
OPENAI_API_KEY=

# Identity
MERCURY_CHATSDK_USERNAME=mick
MERCURY_CHATSDK_PORT=8787
MERCURY_TRIGGER_PATTERNS=@Mick

# Model
MERCURY_MODEL_PROVIDER=anthropic
MERCURY_MODEL=claude-sonnet-4-20250514

# Runtime
MERCURY_DATA_DIR=.mercury
MERCURY_MAX_CONCURRENCY=2
MERCURY_LOG_LEVEL=info

# Containerized agent runtime
MERCURY_AGENT_CONTAINER_IMAGE=mercury-agent:latest

# Optional: pi auth file path (default: <dataDir>/global/auth.json)
# MERCURY_AUTH_PATH=

# Optional: admin caller IDs (comma-separated)
# MERCURY_ADMINS=

# WhatsApp ingress (Baileys socket)
MERCURY_ENABLE_WHATSAPP=false
# MERCURY_WHATSAPP_AUTH_DIR=  # default: <dataDir>/whatsapp-auth

# Optional Slack ingress
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Optional Discord ingress
DISCORD_BOT_TOKEN=
DISCORD_PUBLIC_KEY=
DISCORD_APPLICATION_ID=
DISCORD_MENTION_ROLE_IDS=
MERCURY_DISCORD_GATEWAY_DURATION_MS=600000
MERCURY_DISCORD_GATEWAY_SECRET=
