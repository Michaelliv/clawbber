# Required: one provider key
ANTHROPIC_API_KEY=
ANTHROPIC_OAUTH_TOKEN=
OPENAI_API_KEY=

# Identity
BEARCLAW_CHATSDK_USERNAME=mick
BEARCLAW_CHATSDK_PORT=8787
BEARCLAW_TRIGGER_PATTERNS=@Mick

# Model
BEARCLAW_MODEL_PROVIDER=anthropic
BEARCLAW_MODEL=claude-sonnet-4-20250514

# Runtime
BEARCLAW_DATA_DIR=.bearclaw
BEARCLAW_MAX_CONCURRENCY=2
BEARCLAW_LOG_LEVEL=info

# Containerized agent runtime
BEARCLAW_AGENT_CONTAINER_IMAGE=bearclaw-agent:latest

# Optional: pi auth file path (default: <dataDir>/global/auth.json)
# BEARCLAW_AUTH_PATH=

# Optional: admin caller IDs (comma-separated)
# BEARCLAW_ADMINS=

# WhatsApp ingress (Baileys socket)
BEARCLAW_ENABLE_WHATSAPP=false
# BEARCLAW_WHATSAPP_AUTH_DIR=  # default: <dataDir>/whatsapp-auth

# Optional Slack ingress
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Optional Discord ingress
DISCORD_BOT_TOKEN=
DISCORD_PUBLIC_KEY=
DISCORD_APPLICATION_ID=
DISCORD_MENTION_ROLE_IDS=
BEARCLAW_DISCORD_GATEWAY_DURATION_MS=600000
BEARCLAW_DISCORD_GATEWAY_SECRET=
