{
  "name": "clawsome",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:chat": "bun run src/chat-sdk.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts src/chat-sdk.ts --outdir dist --target bun",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx biome check src/ tests/",
    "lint:fix": "bunx biome check --fix src/ tests/",
    "check": "bun run typecheck && bun run lint && bun test"
  },
  "dependencies": {
    "@chat-adapter/discord": "^4.14.0",
    "@chat-adapter/slack": "^4.14.0",
    "@chat-adapter/state-memory": "^4.14.0",
    "@mariozechner/pi-agent-core": "^0.55.0",
    "@mariozechner/pi-ai": "^0.55.0",
    "@mariozechner/pi-coding-agent": "^0.55.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "chat": "^4.14.0",
    "cron-parser": "^5.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/node": "^22.10.0",
    "bun-types": "^1.3.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
